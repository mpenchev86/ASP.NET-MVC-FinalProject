@(Html.Kendo().DropDownList()
    .Name((string)ViewData["DropDownName"])
    .DataTextField((string)ViewData["Text"])
    .DataValueField((string)ViewData["Value"])
    .DataSource(source =>
    {
        source
            .Read(read => read.Action((string)ViewData["Action"], (string)ViewData["Controller"], new { area = Areas.AdministrationAreaName }))
            .ServerFiltering(true)
            ;
    })
    // Updating nullable fields when their current value is null doesn't work without it.
    .ValuePrimitive(true)
    .OptionLabel((string)ViewData["OptionLabel"])
    .HtmlAttributes(ViewData["htmlAttributes"] ?? new { })
)