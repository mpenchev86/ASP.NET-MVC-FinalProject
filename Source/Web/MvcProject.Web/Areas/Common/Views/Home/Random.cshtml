@using MvcProject.Services.Web
@model IEnumerable<MvcProject.Web.Areas.Common.ViewModels.Home.ProductViewModel>
@{
    ViewBag.Title = "Random";
}

<h2>Random</h2>
<div class="container">
    @foreach (var product in Model)
    {
        <div class="row">
            <div class="col-md-1">
                <a href="@product.Url">@product.Name</a>
            </div>
            <div class="col-md-1">
                @product.Category
            </div>
            <div class="col-md-10">
                @product.Description
            </div>
        </div>
    }
</div>
