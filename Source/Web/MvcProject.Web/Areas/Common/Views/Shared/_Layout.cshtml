<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render(MvcProject.GlobalConstants.Bundles.StyleContentKendoCss)
    @Styles.Render(MvcProject.GlobalConstants.Bundles.StyleContentCss)
    @RenderSection("styles", required: false)
    @Scripts.Render(MvcProject.GlobalConstants.Bundles.ScriptJQuery)
    @Scripts.Render(MvcProject.GlobalConstants.Bundles.ScriptKendo)
    @*<script src="~/Scripts/jquery.signalR-2.2.0.js"></script>
    <script src="~/signalr/hubs" type="text/javascript"></script>*@
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("My MVC Final Project", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        <ol class="breadcrumb">
            <li><a href="#">Home</a></li>
            <li><a href="#">Library</a></li>
            <li class="active">Data</li>
        </ol>
        @RenderBody()
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    @*When Kendo is used, both with jquery go to head. Uncomment if Kendo is not used*@
    @*@Scripts.Render(MvcProject.GlobalConstants.Bundles.ScriptJQuery)*@
    @Scripts.Render(MvcProject.GlobalConstants.Bundles.ScriptBootstrap)
    @RenderSection("scripts", required: false)
</body>
</html>
