@using MvcProject.Web.Areas.Admin.ViewModels.Products
@using MvcProject.Web.Infrastructure.HtmlHelpers

@(Html.ClientDetailsGrid<ProductDetailsForCategoryViewModel>(
    name: "products_grid_#=Id#",
    action: "GetProductsByCategoryId",
    controller: "Categories",
    routeValues: new { area = "Admin", categoryId = "#=Id#" },
    pageSize: 10,
    columns: col =>
    {
        col.Bound(c => c.Id).Title("ID");
        col.Bound(c => c.Title).Width("30%");
        col.Bound(c => c.ShortDescription).Width("40%");
        col.Bound(c => c.UnitPrice);
        col.Bound(c => c.CreatedOn);
        col.Bound(c => c.ModifiedOn);
    },
    readHandler: "dataHandler")
    .ToClientTemplate()
    .ToMvcClientTemplate())
