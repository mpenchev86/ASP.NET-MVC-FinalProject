@model int

@{
    var data = new List<SelectListItem>();
    for (int i = 0; i < 3; i++)
    {
        data.Add(new SelectListItem() { Text = i.ToString() + "cifra", Value = i.ToString() });
    }
}

@(Html.Kendo().DropDownList()
    .Name("DescriptionId")
    .DataTextField("Text")
    .DataValueField("Value")
    .Deferred()
    .BindTo(data)
    .OptionLabel("Select...")
)

@section Scripts{
    @(Html.Kendo().DeferredScripts())    
}