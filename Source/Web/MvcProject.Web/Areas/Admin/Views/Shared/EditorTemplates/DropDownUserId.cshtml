@*@model string*@

@(Html.Kendo().DropDownListFor(m => m)
    .Name((string)ViewData["DropDownName"])
    .OptionLabel((string)ViewData["OptionLabel"])
    .DataTextField((string)ViewData["Text"])
    .DataValueField((string)ViewData["Value"])
    .DataSource(dataSource =>
    {
        dataSource
            .Read(read => read.Action((string)ViewData["Action"], (string)ViewData["Controller"], new { area = "Admin" }))
            .ServerFiltering(true);
    })
)