@using System.Reflection
@model IEnumerable<PropertyInfo>

@{
    ViewBag.Title = "Admin Index";
}

<div class="row">
    <h2>Administration panel</h2>
    <br />
</div>
<div class="row">
    <h4 class="col-md-2">
        Choose domain entity:
    </h4>
    <div class="col-md-6">
    @using (Html.BeginForm("DomainModelRedirect", "Home", new { Area = "Admin" }, FormMethod.Get, new { id = "select-form" }))
    {
        @Html.DropDownList(
            "domainModel",
            new SelectList(Model.Select(x => x.Name)),
            new { id = "dropdown-list", @onchange = "submitForm()"})

    }
    </div>
    <ul id="domains-container" class="col-md-10">
        @foreach (PropertyInfo property in Model)
            {
            <li class="btn btn-default">
                @Html.ActionLink(property.Name, "Index", property.Name, new { Area = "Admin" }, new { })
            </li>
        }
    </ul>

</div>

@section styles{
    <link href="@Url.Content("~/Content/Custom/Admin/domains-list.css")" rel="stylesheet" type="text/css" />
}

@section Scripts{
    <script>
        @(Html.Kendo().DeferredScripts())

        function submitForm() {
            $('#select-form').submit();
        }
    </script>
}