            @Html.EditorFor(
                m => m.MainImageId,
                new
                {
                    OptionLabel = "Select Main Image...",
                    DropDownName = "MainImageId",
                    Text = "Id",
                    Value = "Id",
                    Action = "GetDataAsJson",
                    Controller = "Images"
                })
            @Html.ValidationMessageFor(m => m.MainImageId)
        </div>
    </div>

    <div class="row">
        <div class="editor-label">
            @Html.LabelFor(m => m.QuantityInStock)
