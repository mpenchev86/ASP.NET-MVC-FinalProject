@using MvcProject.Web.Areas.Admin.ViewModels.Images
@using MvcProject.Web.Infrastructure.HtmlHelpers

@(Html.ClientDetailsGrid<ImageDetailsForProductViewModel>(
    name: "images-grid_#=Id#",
    columns: cols =>
    {
        cols.Bound(c => c.Id).Title("ID").Width("10%");
        cols.Bound(c => c.OriginalFileName);
        cols.Bound(c => c.FileExtension);
        cols.Bound(c => c.UrlPath);
        cols.Bound(c => c.CreatedOn).Width("10%");
        cols.Bound(c => c.ModifiedOn).Width("10%");
    })
    .HtmlAttributes(new { @class = "details-grid" })
    .ToClientTemplate()
)