@using MvcProject.Web.Areas.Admin.ViewModels.Tags
@using MvcProject.Web.Infrastructure.HtmlHelpers

@(Html.ClientDetailsGrid<TagDetailsForProductViewModel>(
    name: "tags_grid_#=Id#",
    action: "GetTagsByProductId",
    controller: "Products",
    routeValues: new { area = "Admin", productId = "#=Id#" },
    pageSize: 10,
    columns: col =>
    {
        col.Bound(c => c.Id).Title("ID").Width("10%");
        col.Bound(c => c.Name);
        col.Bound(c => c.CreatedOn);
        col.Bound(c => c.ModifiedOn);
    })
    .ToClientTemplate())
