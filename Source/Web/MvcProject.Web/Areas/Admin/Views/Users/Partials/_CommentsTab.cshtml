@using MvcProject.Web.Areas.Admin.ViewModels.Comments
@using MvcProject.Web.Infrastructure.HtmlHelpers

@(Html.ClientDetailsGrid<CommentDetailsForUserViewModel>(
    name: "comments-grid_#=Id#",
    columns: col =>
    {
        col.Bound(c => c.Id).Title("ID").Width("10%");
        col.Bound(c => c.Content).Width("40%");
        col.Bound(c => c.ProductId).Title("Product ID");
        col.Bound(c => c.CreatedOn);
        col.Bound(c => c.ModifiedOn);
    })
    .ToClientTemplate())

