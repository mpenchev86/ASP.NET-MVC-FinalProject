@using MvcProject.Web.Areas.Admin.ViewModels.Properties
@using MvcProject.Web.Infrastructure.HtmlHelpers

@(Html.ClientDetailsGrid<PropertyDetailsForDescriptionViewModel>(
    name: "properties_grid_#=Id#",
    action: "GetPropertiesByDescriptionId",
    controller: "Descriptions",
    routeValues: new { area = "Admin", descriptionId = "#=Id#" },
    pageSize: 10,
    columns: col =>
    {
        col.Bound(c => c.Id).Title("ID");
        col.Bound(c => c.Name).Width("30%");
        col.Bound(c => c.Value).Width("40%");
        col.Bound(c => c.CreatedOn);
        col.Bound(c => c.ModifiedOn);
    },
    readHandler: "dataHandler")
    .ToClientTemplate()
    .ToMvcClientTemplate())

