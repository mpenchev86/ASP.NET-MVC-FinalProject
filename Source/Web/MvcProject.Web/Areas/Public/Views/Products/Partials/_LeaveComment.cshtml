@model MvcProject.Web.Areas.Public.ViewModels.Comments.CommentPostViewModel

@using (Ajax.BeginForm(
    "CreateComment",
    "Comments",
    new { Area = "Public"},
    new AjaxOptions
    {
        InsertionMode = InsertionMode.ReplaceWith,
        UpdateTargetId = (string)ViewData["UpdateTargetId"],
        HttpMethod = "POST",
        LoadingElementId = "leavecomment-loading-spinner",
        OnSuccess = "onNewCommentSuccess"
    },
    new { id = "new-comment-form" }
    ))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.ProductId)
    @Html.HiddenFor(m => m.UserName)
    @Html.HiddenFor(m => m.CreatedOn)
    @Html.HiddenFor(m => m.ModifiedOn)
    
    <div class="row">
        @Html.EditorFor(m => m.Content, new { htmlAttributes = new { placeholder = "Place your comment here" } })
    </div>
    <div class="row">
        <input type="submit" class="btn btn-default" value="SUBMIT REVIEW" />
    </div>
}

<img id="leavecomment-loading-spinner" src="~/Content/Kendo/Silver/loading_2x.gif" style="display: none; text-align: center;" />
