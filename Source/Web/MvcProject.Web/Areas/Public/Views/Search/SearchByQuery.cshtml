@Html.DisplayFor(m => m.CategoriesData, new { query = Model.Query })

<!-- ListView products template -->
<script type="text/kendo-tmpl" id="query-search-result-template">
    @Html.Partial("_QuerySearchListViewTemplate")
</script>

@section Scripts{
    @Html.Kendo().DeferredScripts()
}