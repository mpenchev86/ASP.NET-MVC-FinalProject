@model MvcProject.Web.Areas.Admin.ViewModels.Statistics.StatisticsViewModel

<div class="container-fluid">
    <div class="row">
        @Html.HiddenFor(m => m.Id)
    </div>

    <div class="row">
        <div class="editor-label">
            @Html.LabelFor(m => m.AllTimeItemsSold)
        </div>
        <div class="editor-field">
            @Html.EditorFor(m => m.AllTimeItemsSold)
            @Html.ValidationMessageFor(model => model.AllTimeItemsSold)
        </div>
    </div>

    <div class="row">
        <div class="editor-label">
            @Html.LabelFor(m => m.OverAllRating)
        </div>
        <div class="editor-field">
            @Html.EditorFor(m => m.OverAllRating)
            @Html.ValidationMessageFor(model => model.OverAllRating)
        </div>
    </div>

    <div class="row">
        <div class="editor-label">
            @Html.LabelFor(m => m.IsDeleted, "Mark as deleted")
        </div>
        <div class="editor-field">
            @Html.EditorFor(m => m.IsDeleted)
            @Html.ValidationMessageFor(model => model.IsDeleted)
        </div>
    </div>
</div>