@model MvcProject.Web.Areas.Administration.ViewModels.SearchFilters.SearchFilterViewModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend></legend>

        <div class="container-fluid">
            <div class="row">
                @Html.HiddenFor(m => m.Id)
            </div>

            <div class="row">
                <div class="editor-label">
                    @Html.LabelFor(m => m.Name)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(m => m.Name)
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
            </div>

            <div class="row">
                <div class="editor-label">
                    @Html.LabelFor(m => m.OptionsType)
                </div>
                <div class="editor-field">
                    @Html.EnumDropDownListFor(m => m.OptionsType)
                    @Html.ValidationMessageFor(model => model.OptionsType)
                </div>
            </div>

            <div class="row">
                <div class="editor-label">
                    @Html.LabelFor(m => m.SelectionType)
                </div>
                <div class="editor-field">
                    @Html.EnumDropDownListFor(m => m.SelectionType)
                    @Html.ValidationMessageFor(model => model.SelectionType)
                </div>
            </div>

            <div class="row">
                <div class="editor-label">
                    @Html.LabelFor(m => m.Options)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(m => m.Options)
                    @Html.ValidationMessageFor(model => model.Options)
                </div>
            </div>

            <div class="row">
                <div class="editor-label">
                    @Html.LabelFor(m => m.MeasureUnit)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(m => m.MeasureUnit)
                    @Html.ValidationMessageFor(model => model.MeasureUnit)
                </div>
            </div>

            <div class="row">
                <div class="editor-label">
                    @Html.LabelFor(m => m.CategoryId, "Category")
                </div>
                <div class="editor-field">
                    @Html.EditorFor(m => m.CategoryId, new { OptionLabel = "Select Category..." })
                    @Html.ValidationMessageFor(m => m.CategoryId)
                </div>
            </div>

            <div class="row">
                <div class="editor-label">
                    @Html.LabelFor(m => m.IsDeleted, "Mark as deleted")
                </div>
                <div class="editor-field">
                    @Html.EditorFor(m => m.IsDeleted)
                    @Html.ValidationMessageFor(model => model.IsDeleted)
                </div>
            </div>
        </div>
    </fieldset>
}
