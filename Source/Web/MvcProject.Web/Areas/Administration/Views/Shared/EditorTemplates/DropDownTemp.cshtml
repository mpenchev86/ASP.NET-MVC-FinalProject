@model int?

@(Html.Kendo().DropDownListFor(m => m)
    .Name((string)ViewData["Name"])
    .DataTextField((string)ViewData["Text"])
    .DataValueField((string)ViewData["Value"])
    .ValuePrimitive(true)
    .OptionLabel((string)ViewData["OptionLabel"] ?? "Choose...")
    .HtmlAttributes(ViewData["htmlAttributes"] ?? new { })
)
