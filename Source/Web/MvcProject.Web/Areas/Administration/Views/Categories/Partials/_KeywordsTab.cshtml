@using MvcProject.Web.Areas.Administration.ViewModels.Keywords
@using MvcProject.Web.Infrastructure.HtmlHelpers

@(Html.ClientDetailsGrid<KeywordDetailsForCategoryViewModel>(
    name: "keywords-grid_#=Id#",
    columns: cols =>
    {
        cols.Bound(c => c.Id).Title("ID");
        cols.Bound(c => c.SearchTerm).Width("30%");
        cols.Bound(c => c.CreatedOn);
        cols.Bound(c => c.ModifiedOn);
    })
    .ToClientTemplate()
)