@model MvcProject.Web.Areas.Administration.ViewModels.Comments.CommentViewModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    
    <fieldset>
        <legend></legend>

        <div class="container-fluid">
            <div class="row">
                @Html.HiddenFor(m => m.Id)
            </div>

            <div class="row">
                <div class="editor-label">
                    @Html.LabelFor(m => m.Content)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(m => m.Content)
                    @Html.ValidationMessageFor(model => model.Content)
                </div>
            </div>

            <div class="row">
                <div class="editor-label">
                    @Html.LabelFor(m => m.ProductId, "Product Id")
                </div>
                <div class="editor-field">
                    @Html.EditorFor(m => m.ProductId, new { OptionLabel = "Select Product..." })
                    @Html.ValidationMessageFor(m => m.ProductId)
                </div>
            </div>

            <div class="row">
                <div class="editor-label">
                    @Html.LabelFor(m => m.UserId, "User")
                </div>
                <div class="editor-field">
                    @Html.EditorFor(m => m.UserId, new { OptionLabel = "Select User...", })
                    @Html.ValidationMessageFor(m => m.UserId)
                </div>
            </div>

            <div class="row">
                <div class="editor-label">
                    @Html.LabelFor(m => m.IsDeleted, "Mark as deleted")
                </div>
                <div class="editor-field">
                    @Html.EditorFor(m => m.IsDeleted)
                    @Html.ValidationMessageFor(model => model.IsDeleted)
                </div>
            </div>
        </div>
    </fieldset>
}
