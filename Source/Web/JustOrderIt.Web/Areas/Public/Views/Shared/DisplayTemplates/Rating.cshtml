@model double?

@{
    var maxVote = 5;
}

@(Html.Infragistics()
    .RatingFor(m => m)
    //.Rating()
    .ID("igRating" + ViewData["index"].ToString())
    .VoteCount(maxVote)
    //.Value(Model.Value)
    .ValueAsPercent(false)
    //.Focusable(false)
    .Disabled(true)
    .PrecisionZeroVote(0.1)
    .Precision(RatingPrecision.Exact)
    .HtmlAttributes(new Dictionary<string, object> { { "title", Model.ToString() + " stars out of " + maxVote.ToString() } })
    //.ValidatorOptions(v => v.)
    .Render()
)
