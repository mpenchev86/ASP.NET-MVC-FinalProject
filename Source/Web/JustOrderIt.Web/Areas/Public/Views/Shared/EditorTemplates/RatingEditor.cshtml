@model double?

@{
    var maxVote = 5;
    var htmlAttributes = (Dictionary<string, object>)ViewData["htmlAttributes"] ?? new Dictionary<string, object>();
    var inputName = (string)ViewData["inputName"] ?? "VoteValue";
    var identifier = string.Format("igRating-editor{0}", ViewData["identifier"] != null ? ViewData["index"].ToString() : string.Empty);
}

@(Html.Infragistics()
    .RatingFor(m => m)
    .ID(identifier)
    .InputName(inputName)
    .VoteCount(maxVote)
    .ValueAsPercent(false)
    .PrecisionZeroVote(0.1)
    .Precision(RatingPrecision.Whole)
    .HtmlAttributes(htmlAttributes)
    .Render()
)
