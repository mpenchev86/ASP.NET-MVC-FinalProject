@model double?

@{
    var maxVote = 5;
    //var htmlAttributes = (Dictionary<string, object>)ViewData["htmlAttributes"] ?? new Dictionary<string, object>();
}

@(Html.Infragistics()
    .RatingFor(m => m)
    //.Rating()
    .ID("igRating")
    .VoteCount(maxVote)
    //.Value(Model.Value)
    .ValueAsPercent(false)
    //.Focusable(false)
    .Disabled(true)
    .PrecisionZeroVote(0.1)
    .Precision(RatingPrecision.Exact)
    //.HtmlAttributes(htmlAttributes)
    .HtmlAttributes(new Dictionary<string, object> { { "title", string.Format("curent rating: {0:0.0}", Model.Value) } })
    //.ValidatorOptions(v => v.)
    .Render()
)
