@using JustOrderIt.Web.Areas.Administration.ViewModels.Products
@using JustOrderIt.Web.Infrastructure.HtmlHelpers

@(Html.ClientDetailsGrid<ProductDetailsForTagViewModel>(
    name: "products-grid_#=Id#",
    columns: col =>
    {
        col.Bound(c => c.Id).Title("ID").Width(120);
        col.Bound(c => c.Title)/*.Width("40%")*/;
        col.Bound(c => c.CreatedOn).Width(180);
        col.Bound(c => c.ModifiedOn).Width(180);
    })
    .ToClientTemplate())
