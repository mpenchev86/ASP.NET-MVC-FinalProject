@using JustOrderIt.Web.Areas.Administration.ViewModels.Properties
@using JustOrderIt.Web.Infrastructure.HtmlHelpers

@(Html.ClientDetailsGrid<PropertyDetailsForDescriptionViewModel>(
    name: "properties-grid_#=Id#",
    columns: col =>
    {
        col.Bound(c => c.Id).Title("ID");
        col.Bound(c => c.Name).Width("30%");
        col.Bound(c => c.Value).Width("40%");
        col.Bound(c => c.CreatedOn);
        col.Bound(c => c.ModifiedOn);
    })
    .ToClientTemplate())

