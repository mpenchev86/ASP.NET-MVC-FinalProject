@using JustOrderIt.Web.Areas.Administration.ViewModels.Roles
@using JustOrderIt.Web.Infrastructure.HtmlHelpers

@(Html.ClientDetailsGrid<RoleDetailsForUserViewModel>(
    name: "roles-grid_#=Id#",
    columns: col =>
    {
        col.Bound(c => c.Id).Title("ID").Width("10%");
        col.Bound(c => c.Name).Width("40%");
    })
    .ToClientTemplate())