@using JustOrderIt.Web.Areas.Administration.ViewModels.Users
@using JustOrderIt.Web.Infrastructure.HtmlHelpers

@(Html.ClientDetailsGrid<UserDetailsForRoleViewModel>(
    name: "users-grid_#=Id#",
    columns: col =>
    {
        col.Bound(c => c.Id).Title("ID").Width("10%");
        col.Bound(c => c.UserName).Width("40%");
    })
    .ToClientTemplate())