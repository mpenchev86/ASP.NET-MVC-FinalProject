@using JustOrderIt.Web.Areas.Administration.ViewModels.Votes
@using JustOrderIt.Web.Infrastructure.HtmlHelpers

@(Html.ClientDetailsGrid<VoteDetailsForProductViewModel>(
    name: "votes-grid_#=Id#",
    columns: cols =>
    {
        cols.Bound(c => c.Id).Title("ID").Width("10%");
        cols.Bound(c => c.VoteValue);
        cols.Bound(c => c.UserName);
        cols.Bound(c => c.CreatedOn).Width("10%");
        cols.Bound(c => c.ModifiedOn).Width("10%");
    })
    .ToClientTemplate()
)