@using JustOrderIt.Web.Areas.Administration.ViewModels.Tags
@using JustOrderIt.Web.Infrastructure.HtmlHelpers

@(Html.ClientDetailsGrid<TagDetailsForProductViewModel>(
    name: "tags-grid_#=Id#",
    columns: cols =>
    {
        cols.Bound(c => c.Id).Title("ID").Width("10%");
        cols.Bound(c => c.Name);
        cols.Bound(c => c.CreatedOn).Width("10%");
        cols.Bound(c => c.ModifiedOn).Width("10%");
    })
    .ToClientTemplate()
)
